---
interface Props {
  title: string;
  description: string;
  url?: string;
  wip?: boolean;
}

const {title, description, url='#', wip=false} = Astro.props;
---
<div>
    <a href={url}>
      <h2 class={"font-semibold text-lg mb-1 " + (wip && "text-gray-600")}>
        {title}{wip && "- (wip)"}
      </h2>
    </a>
    <p class="text-sm font-mono">{description}</p>
</div>

